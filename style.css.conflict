body{
	background:url(images/body.jpg) no-repeat center 0 #120902;
}

#wrapper{
	position:relative;
	margin:auto;
	overflow:hidden;
	width:700px;
	height:400px;
}

.card, .handCard, #hole{
	width:40px;
	height:60px;
	position:absolute;
	border:1px solid #666;
	border-radius:3px;
	background-color:#fff;
}

.back, #hole.back{
	
	background-color:#234567;
}

.card:hover, .handCard:hover, #hole:hover{
	cursor:pointer;
}

.handCard{
	top:215px;
	left:430px;
}
/*
